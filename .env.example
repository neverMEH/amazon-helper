# Amazon Advertising API Configuration
AMAZON_CLIENT_ID=your_client_id_here
AMAZON_CLIENT_SECRET=your_client_secret_here
AMAZON_REDIRECT_URI=http://localhost:8000/auth/callback
AMAZON_SCOPE=advertising::campaign_management advertising::insights

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/amc_manager
REDIS_URL=redis://localhost:6379

# Application Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENVIRONMENT=development
DEBUG=True

# AWS Configuration for S3 Results
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=amc-results-bucket

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# AMC Configuration
AMC_API_VERSION=v1
AMC_API_BASE_URL=https://advertising-api.amazon.com